import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        int n = sc. nextInt();
        int arr[]=new int[n];
        for(int i=0;i<n;i++)
        {
            arr[i]=sc.nextInt();
        }
        boolean flag = true;
        Arrays.sort(arr);
        for(int i =1;i<n;i++)
        {
            int diff = arr[i]-arr[i-1];
            if(diff!=1)
            { 
                flag = false;
                break;
            }
        } 
        if(flag==true)
        {
         System.out.print(1);
        }
        else
        {
            System.out.print(0);
        }
    }
}
