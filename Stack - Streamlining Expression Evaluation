import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution{
    public static int p(char c)
    {
         if(c == '/'||c=='*')
         {
             return 2;
         }
        else if(c == '+'||c=='-')
         {
             return 1;
         }
        else
        {
            return -1;
        }
    }
    public static String ip(String re)
    {
    StringBuilder sb = new StringBuilder();
        Stack<Character> list = new Stack<>();
        for(int i=0;i<re.length();i++)
        {
            if(re.charAt(i) >='A' && re.charAt(i) <='Z')
            {
                sb.append(re.charAt(i));
            }
            else if(re.charAt(i) ==')')
            {
                list.push(re.charAt(i));
            }
            else if(re.charAt(i) =='(')
            {
                while(!list.isEmpty() && list.peek() != ')')
                {
                    sb.append(list.pop());
                }
                list.pop();
            }
    else 
            {
                while(!list.isEmpty() && p(re.charAt(i))<p(list.peek()))
                {
                    sb.append(list.pop());
                }
                list.push(re.charAt(i));
            }
        }
        while(!list.isEmpty())
        {
            sb.append(list.pop());
        }
        return sb.reverse().toString();
    }
    
    public static void main(String[] args) {
        /* Enter your code here. ad input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        String s = sc.nextLine();
        StringBuilder r = new StringBuilder(s).reverse();
        String re = r.toString();
        System.out.print(ip(re));
    
}
}
